<%= render 'orders/buttonsventes' %>

<div class="container" id="aPreparer">
  <h1>Mes commandes à préparer</h1>
  <div class="col-md-8 col-lg-8 col-xs-12">
    <% @orders_a_preparer.each do |order| %>
      <div class="col-xs-10">
      <b> <%= order.article.name %>  </b><i> (<%= order.status %>)</i>
      <br>
      <%= order.article.quantity %>
      <%= order.article.unit %>
      <br>
      prix : <i><b><%= order.article.price %>€</b></i>
      <br>
      vendeur : <%= order.article.user.first_name + " " + order.article.user.last_name %>
      <br>
      ---------------------
    </div>
    <div class="col-xs-2">
      <%= link_to "preparation ok", change_statut_path(order, status: :confirme), class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>
