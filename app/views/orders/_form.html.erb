    <div class="col-xs-12">
      <%= f.input :name, placeholder: "Nom", label: false %>
    </div>
    <div class="col-xs-12">
      <%= f.input :description, placeholder: "Description", label: false%>
    </div>
    <div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class="form-group">
          <%= f.input :quantity, placeholder: "Qte", label:false  %>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class="form-group">
          <%= f.input :unit, placeholder: "UnitÃ©e", collection: Article.units, label:false %>
        </div>
      </div>
